#include "dongle_nice_common.dtsi"

/ {
	chosen {
		zephyr,display = &oled;
	};
};

// I2C for OLED on nice!nano
&pro_micro_i2c {
	oled: ssd1306@3c {
		compatible = "solomon,ssd1306fb";
		reg = <0x3c>;
		width = <128>;
		height = <64>;
		segment-offset = <0>;
		page-offset = <0>;
		display-offset = <0>;
		multiplex-ratio = <63>;
		prechargep = <0x22>;
		inversion-on;
	};
};
